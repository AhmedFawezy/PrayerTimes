<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- تعريف الشكل الأساسي -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="linear"
                android:centerX="70%"
                android:centerColor="#8004485C"
                android:startColor="#80D79A00"
                android:endColor="#994C0B2E"
                android:angle="315"/>

            <corners
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"/>

            <stroke
                android:color="#DBDCDC"
                android:width="2dp"/>

            <size
                android:width="270dp"
                android:height="30dp"/>
        </shape>
    </item>

    <!-- إضافة ظل -->
		<!--يجب اضافة هذا الشكل هذا اعلي الشكل الاساسي-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- لون الظل مثلاً -->
            <corners
                android:topLeftRadius="10dp"
                android:topRightRadius="10dp"
                android:bottomLeftRadius="10dp"
                android:bottomRightRadius="10dp"/>

            <!-- زيادة الـ padding لخلق تأثير الظل -->
            <padding android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp"/>
        </shape>
    </item>

</layer-list>

